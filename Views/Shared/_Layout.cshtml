<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Workforce Scheduler</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex h-screen">

    <!-- Sidebar -->
    <aside class="w-64 bg-indigo-700 text-white flex flex-col">
        <div class="p-6">
            <h1 class="text-2xl font-bold mb-6">Scheduler</h1>
            <nav class="flex flex-col space-y-2">
                <a href="/" class="px-4 py-2 rounded hover:bg-indigo-600 transition">Home</a>
                <a href="/Home/About" class="px-4 py-2 rounded hover:bg-indigo-600 transition">About</a>
                <a href="/Dashboard" class="px-4 py-2 rounded bg-indigo-900 shadow">Dashboard</a>
            </nav>
        </div>
    </aside>

    <!-- Main content -->
    <div class="flex-1 flex flex-col overflow-hidden">
        <!-- Header -->
        <header class="bg-white shadow px-6 py-4 flex justify-between items-center flex-shrink-0">
            <h2 class="text-xl font-bold text-gray-800">@ViewData["Title"]</h2>
            <button class="px-4 py-2 bg-indigo-600 text-white rounded hover:bg-indigo-700 transition">
                User Profile
            </button>
        </header>

        <!-- Scrollable content -->
        <main class="flex-1 overflow-auto p-6">
            @RenderBody()
        </main>
    </div>

</body>
</html>
